<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>Sistema de Reservas Hugo550153</display-name>
    <description>
        Sistema de gerenciamento de reservas de veículos.
        Projeto desenvolvido com Servlet e JSP, compatível com Tomcat 9.
    </description>
    
    <!-- Configuração de encoding UTF-8 -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>ignore</param-name>
            <param-value>false</param-value>
        </init-param>
    </filter>
    
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <!-- Página de boas-vindas -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- Configuração de sessão -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    
    <!-- Configuração de JSP para Tomcat 9 -->
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <url-pattern>*.jspf</url-pattern>
            <page-encoding>UTF-8</page-encoding>
            <scripting-invalid>false</scripting-invalid>
        </jsp-property-group>
    </jsp-config>
    
    <!-- Mapeamento do Servlet Cliente -->
    <servlet>
        <servlet-name>ClienteServlet</servlet-name>
        <servlet-class>br.com.exame.servlet.ClienteServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ClienteServlet</servlet-name>
        <url-pattern>/cliente</url-pattern>
    </servlet-mapping>
    
    <!-- Mapeamento do Servlet Veiculo -->
    <servlet>
        <servlet-name>VeiculoServlet</servlet-name>
        <servlet-class>br.com.exame.servlet.VeiculoServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>VeiculoServlet</servlet-name>
        <url-pattern>/veiculo</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>VeiculoServlet</servlet-name>
        <url-pattern>/VeiculoServlet</url-pattern>
    </servlet-mapping>
    
    <!-- Mapeamento do Servlet Reserva -->
    <servlet>
        <servlet-name>ReservaServlet</servlet-name>
        <servlet-class>br.com.exame.servlet.ReservaServlet</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ReservaServlet</servlet-name>
        <url-pattern>/reserva</url-pattern>
    </servlet-mapping>
    
